@model IEnumerable<eLibrary.Models.Assunto>

@{
    ViewBag.Title = "Index";
}

<header class="masthead text-white d-flex">
    <div class="container my-auto">

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.AssuntoID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.AssuntoID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.AssuntoID })
                    </td>
                </tr>
            }

        </table>
    </div>
</header>

@model eLibrary.Models.ReservasViewModel


@{
    ViewBag.Title = "Historico de Reservas";
}

<header class="masthead text-white d-flex">
    <div class="container my-auto">

        <hr />
        <hr />
        <table class="table">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Livro
                </th>
                <th>
                    Data da reserva
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Reservas)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReservaID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item._Livro.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        <div class="btn-group">
                            @Html.ActionLink("Cancelar Reserva", "Delete", new { id = item.ReservaID }, htmlAttributes: new { @class = "btn btn-danger" })
                        </div>
                    </td>
                </tr>
            }

        </table>
        </div>
</header>
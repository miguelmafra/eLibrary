@model eLibrary.Models.ReservasViewModel

@{
    ViewBag.Title = "HistoricoReservas";
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Livro
        </th>
        <th>
            Data da Reserva
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Reservas)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReservaID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._Livro.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                <div class="btn-group">
                    @Html.ActionLink("Cancelar", "Delete", "Reservas", new { id = item.ReservaID }, htmlAttributes: new { @class = "btn btn-warning" })
                </div>
            </td>
        </tr>
    }

</table>
